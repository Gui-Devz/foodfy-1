{% extends "layout.njk" %}

{% block title %}
    <title>Receitas - Foodfy</title>
{% endblock %}

{% block content %}
    <section class="content__section">
        <div class="content__section-cards">
            {% for item in items %}
                <div class="card">
                    <div class="card__image">
                        <img src="{{ item.image }}" alt="Recipe {{ item.title }}">
                    </div>
                    <h2 class="card__title">{{ item.title }}</h2>
                    <p class="card__text">
                        por
                        {{ item.author }}
                    </p>
                </div>
            {% endfor %}
        </div>
    </section>
{% endblock %}

{% block scripts %}
    <script src="/scripts/cards.js"></script>
{% endblock %}